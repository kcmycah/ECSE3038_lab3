from flask import Flask

app = Flask(__name__) 

#once the type of request is not specified it is a GET request
    #to specify other requests use: @app.route("/home", methods = ["GET/POST/DELETE/PUT/ other HTTP requests"]
        #to input a name into the request title: @app.route("/home/<name>, methods = ["GET']) /n def home(name) /n return "Hello {name}!"
            #to input query parameters a ? starts the query string, where each parameter is seperated by & for eg. https://www.domain.com/url?variable=value&variable=value
@app.route("/home")
def home():  #how to name a function
    return "WAH GWAAN" #shows up on the site

if __name__ == '__main__':
    app.run(
        debug = True, #remove afer finished coding as it can allow users to access your information on your app/server
        port = 3000, #specifies the exact address/person -- numbers between 1024 &65000 (unsure)
        host = "0.0.0.0" #this will automatically recog the ip address of the device being used
    )


